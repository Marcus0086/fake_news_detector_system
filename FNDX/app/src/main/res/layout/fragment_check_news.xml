<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CheckNewsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardEnterNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:theme="@style/ThemeOverlay.AppCompat"
            app:cardCornerRadius="10dp">

            <EditText
                android:id="@+id/etEnterNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Enter News"
                android:padding="10dp"
                android:lines="6"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="#6A6A6A"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardEnterNews"
            android:layout_marginVertical="20dp">

            <ImageView
                android:id="@+id/imgFake"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/fake"
                app:tint="#EF190A"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/imgReal"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/real"
                app:tint="#149424"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txtRealFake"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/imgFake"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:id="@+id/txtNewsResult"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/imgFake"
                android:layout_below="@+id/txtRealFake"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:theme="@style/ThemeOverlay.AppCompat"
            app:cardCornerRadius="10dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btnCheckNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check"
                android:background="@color/primary_500"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>