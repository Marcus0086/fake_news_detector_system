<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="10dp"
    android:backgroundTint="@color/white"
    android:elevation="10dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgNewsThumbnail"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:transitionName="img"
            tools:ignore="UnusedAttribute" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtHeading"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/txtPublishedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:text="@string/published_date"
                android:textAlignment="viewEnd"
                android:textColor="@color/primary_200"
                android:textSize="11sp"
                tools:ignore="SmallSp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgNewsThumbnail"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="2"
            android:paddingHorizontal="10dp"
            android:text="@string/heading"
            android:textColor="@color/primary_200"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHeading"
            android:fontFamily="@font/roboto_slab"
            android:maxLines="4"
            android:paddingHorizontal="10dp"
            android:paddingBottom="10dp"
            android:text="@string/article"
            android:textColor="@color/primary_200"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>